<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Duck Finances</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/materialize/css/materialize.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
      
        <link rel="stylesheet" href="~/lib/materialize/css/materialize.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    <script type="text/javascript" src="~/lib/Chart.js/dist/Chart.js"></script>
</head>
<body>
        <a name="top"></a>
        <!-- NAVIGATION -->
        <nav class="cyan lighten-1">
            <div class="nav-wrapper">
                <a  class="brand-logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo-small.png" width="80%" height="auto" />
                </a>
                
                @await Html.PartialAsync("_LoginPartial")
            </div>
       </nav>

       <!-- MAIN BODY CONTENT RENDERED HERE -->
       <main>  
            @RenderBody()
       </main>

        <!-- FOOTER CONTENT -->
        <footer class="page-footer cyan lighten-1">
            <div class="container">
                <div class="row">
                    <div class="col l6 s12">
                        <h5 class="white-text">Duck Finances</h5>
                        <p class="white-text">So you aren't ducking broke!</p>
                    </div>

                    <div class="col l4 offset-l2 s12">
                        <ul>
                            <li><a class="white-text" asp-controller="Home" asp-action="Help">Help</a></li>
                            <li><a class="white-text" href="#top">Top of Page</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-copyright white-text">
                <div class="container">
                    &copy; 2016 - Duck Finances
                </div>
            </div>
        </footer>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        
        <script src="~/lib/materialize/js/materialize.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/Chart.js/dist/Chart.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script 
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/lib/materialize/js/materialize.min.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/lib/Chart.js/dist/Chart.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
