@model VerifyCodeViewModel
@{
    ViewData["Title"] = "Verify";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Account" asp-action="VerifyCode" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" >
    <div asp-validation-summary="All" ></div>
    <input asp-for="Provider" type="hidden" />
    <input asp-for="RememberMe" type="hidden" />
    <h4>@ViewData["Status"]</h4>
    <hr />
    <div>
        <label asp-for="Code" ></label>
        <div >
            <input asp-for="Code"  />
            <span asp-validation-for="Code" ></span>
        </div>
    </div>
    <div >
        <div>
            <div>
                <input asp-for="RememberBrowser" />
                <label asp-for="RememberBrowser"></label>
            </div>
        </div>
    </div>
    <div>
        <div>
            <button type="submit">Submit</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
